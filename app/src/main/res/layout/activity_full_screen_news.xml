<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context=".FullScreenNews">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="15dp"
        android:fontFamily="verdana"
        android:layout_gravity="center"
        android:textAlignment="gravity"
        android:textColor="#000"
        android:id="@+id/f_tv_head"
        android:text="India will won the world Cup 2019.."
        android:textStyle="bold"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="5dp"
        android:layout_gravity="center"
        android:id="@+id/f_img"
        android:layout_marginTop="10dp"
        android:src="@drawable/splash_logo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6a6a6a"
            android:textSize="15dp"
            android:text="Date:-"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6a6a6a"
            android:layout_marginHorizontal="30dp"
            android:textSize="15dp"
            android:id="@+id/f_date"
            android:text="01/12/2015"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6a6a6a"
            android:textSize="15dp"
            android:text="time:-"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6a6a6a"
            android:layout_marginHorizontal="10dp"
            android:textSize="15dp"
            android:id="@+id/f_time"
            android:text="12:30"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btn_gmail"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/gmail"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btn_twitter"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/twitter"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btn_whatsapp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/whatsapp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/btn_share"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/ic_share_black_24dp"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:padding="15dp"
        android:textAlignment="gravity"
        android:id="@+id/f_tv_desc"
        android:text="India Will WOn The World Cup 2019..India Will won The World Cup 2019. .India WIll WOn The WOrld Cup 2019..India WIll WOn The WOrld Cup 2019..jdishifdfod"
        android:gravity="center_horizontal" />


</LinearLayout>
</ScrollView>